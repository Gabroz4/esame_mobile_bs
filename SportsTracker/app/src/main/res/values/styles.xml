<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- tema della Base application -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <!-- tema dello Splash screen  -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashbkg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/loading_screen</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowSplashScreenAnimationDuration">2000</item> <!-- durata dell'animazione -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

</resources>
